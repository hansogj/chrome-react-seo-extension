{
    "name": "Discogs tools",
    "description": "Discogs filters searches & add items to collection and want list",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html",
        "default_title": "Open Discogs tools"
    },
    "background": {
        "service_worker": "./static/js/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "./static/js/content.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "discogs.png",
        "48": "discogs.png",
        "128": "discogs.png"
    }
}